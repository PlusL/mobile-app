<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/list_main_iv"
        android:src="@drawable/dog2"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/list_main_iv">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_main_name"
            android:layout_alignParentTop="true"
            android:text="帝都名犬，转让爱心人士"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:paddingTop="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_main_content"
            android:text="我很爱我的狗，但是我养不起了，求转手，这家伙太能吃了！！！"
            android:textSize="12sp"
            android:textColor="#6a6a6a"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_main_price"
            android:layout_gravity="bottom"
            android:text="CNY 250"
            android:textSize="12sp"
            android:textColor="#FF4040"
            android:textStyle="bold"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

</RelativeLayout>