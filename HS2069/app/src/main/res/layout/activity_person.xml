<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <RelativeLayout
        android:id="@+id/activity_person_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_person_blank0"
            android:text=""/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:id="@+id/activity_person_head"
            android:layout_toRightOf="@id/activity_person_blank0"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_head"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/activity_person_head"
            android:paddingTop="10dp"
            android:id="@+id/activity_person_blank"
            android:text=" "
            android:textSize="17sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/activity_person_head"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@id/activity_person_blank"
            android:paddingTop="5dp"
            android:id="@+id/activity_person_nickname"
            android:text="撒币狗"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/activity_person_qrcode"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/activity_person_nickname"
            android:layout_below="@id/activity_person_blank"
            android:src="@drawable/ic_action_qrcode"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_person_id"
            android:layout_toRightOf="@id/activity_person_head"
            android:text="账号ID：5941213"
            android:layout_below="@id/activity_person_qrcode"
            android:textSize="12sp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/person_container"
        android:orientation="vertical"
        android:layout_below="@id/activity_person_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/activity_person_iv"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_action_logout"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/person_container2"
        android:orientation="vertical"
        android:layout_above="@id/activity_person_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>