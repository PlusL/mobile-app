<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_register_et_phone"
        android:hint="请输入您的手机号"
        android:textColorHint="@color/hint_color"
        android:inputType="phone"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_register_et_code"
            android:hint="6位验证码"
            android:textColorHint="@color/hint_color"
            android:inputType="number"
            android:layout_alignParentBottom="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/activity_register_btn_code"
            android:layout_alignBottom="@id/activity_register_et_code"
            android:layout_toRightOf="@id/activity_register_et_code"
            android:layout_marginBottom="7dp"
            android:background="@color/btn_backgroud"
            android:text="获取验证码"
            android:textColor="#ffffff"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_register_et_nickname"
        android:hint="请输入昵称"
        android:textColorHint="@color/hint_color"
        android:layout_marginTop="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_register_et_password1"
        android:hint="请输入密码"
        android:textColorHint="@color/hint_color"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_register_et_password2"
        android:hint="请确认密码"
        android:textColorHint="@color/hint_color"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_register_btn_register"
        android:gravity="center"
        android:background="@color/btn_backgroud"
        android:layout_marginTop="10dp"
        android:text="完成注册"
        android:textColor="#ffffff"/>

</LinearLayout>